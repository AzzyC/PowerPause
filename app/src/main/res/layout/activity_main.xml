<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- MaterialSwitch to toggle Bypass Charge Mode -->
    <!-- When ON, the app will stop charging regardless of battery % -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_bypass_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bypass Charge Mode"
        android:checked="false" />

    <!-- EditText to set battery limit % -->
    <!-- Disabled when Bypass Charge Mode is ON -->
    <EditText
        android:id="@+id/edit_battery_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Battery Limit (%)"
        android:inputType="number"
        android:enabled="true"
        android:layout_marginTop="16dp"/>

    <!-- Button to start the foreground service -->
    <Button
        android:id="@+id/button_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start PowerPause"
        android:layout_marginTop="24dp"/>

</LinearLayout>
